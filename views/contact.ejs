<div class="container">
  <div class="row mt-3">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>
      <a href="/contact/add" class="btn btn-primary my-2">Tambah kontak</a>

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">NIM</th>
            <th scope="col">Nama</th>
            <th scope="col">No Handphone</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <td colspan="4">
            <div class="alert alert-danger fw-bold" role="alert">Data Contact masih kosong!</div>
          </td>
          <% } %> <% contacts.forEach((contact, i) => {i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= contact.nim %></td>
            <td><%= contact.nama %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a href="/contact/<%= contact.nim %> " class="btn btn-success badge"><i class="bi bi-info-square"></i> detail</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
