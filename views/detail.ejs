<div class="container">
  <div class="row mt-3">
    <div class="col-md-8">
      <% if (!contact) { %>
        <div class="alert alert-danger fw-bold" role="alert">
          Kontak tidak ditemukan! <a href="/contact" class="alert-link fw-normal">&laquo; kembali ke halaman kontak</a>.
        </div>
      <% } else { %> 
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contact.nim %></h6>
          <h6 class="card-subtitle mb-2 text-muted"><%= contact.nohp %></h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact/edit/<%= contact.nim %> " class="btn btn-primary badge"></i>Edit</a>
          <a href="/contact/delete/<%= contact.nim %> " class="btn btn-danger badge" onclick="return confirm('Apakah Anda yakin ingin menghapus kontak?')"></i>hapus</a><br>
          <a href="/contact" class="card-link d-block mt-3">&laquo; kembali ke halaman contact</a>
        </div>
      </div>
      <% } %> 
    </div>
  </div>
</div>
